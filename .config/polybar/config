[bar/main]
wm-restack = bspwm

font-0 = IBM Plex Mono:size=14:antialias=true;2
font-1 = Material Design Icons:size=18:antialias=true;2

border-size = 0
fixed-center = true
height = 36
overline-size = 2

module-margin = 1
modules-left = workspaces
modules-center = date
modules-right = github space cpu memory space pulseaudio wireless-network backlight battery exit
background = ${colors.background}
foreground = ${colors.foreground}

[module/workspaces]
type = internal/bspwm
enable-click = true
enable-scroll = true

ws-icon-0 = tty;󰞷
ws-icon-1 = code;󰗀
ws-icon-2 = web;󰊯
ws-icon-3 = social;󰭻
ws-icon-4 = filemanager;󰷏
ws-icon-5 = design;󰋩

ws-icon-default = 󰋙

label-active = %icon%
label-active-foreground = ${colors.green}
label-active-overline = ${colors.green}

label-occupied = %icon%
label-occupied-foreground = ${colors.foreground}

label-urgent = %icon%
label-urgent-foreground = ${colors.red}
label-urgent-overline = ${colors.red}

label-empty = %icon%
label-empty-foreground = ${colors.foreground}

label-active-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1
label-empty-padding = 1

[module/date]
type = internal/date
date-alt = %c
date = %a - %H:%M

[module/space]
type = custom/text
content = 
content-padding = 1

[module/github]
type = internal/github
token = ${env:GITHUB_ACCESS_TOKEN}
user = ericdallo
empty-notifications = false
interval = 20

label = "%{A1:bspc desktop -f web:}󰊤 %notifications%%{A}"
format-offline = <label-offline>

[module/cpu]
type = internal/cpu
interval = 3
format-overline = ${colors.lightblue}
format = <label>
label = 󰻠 %percentage:2%%

[module/memory]
type = internal/memory
interval = 3
format = <label>
format-overline = ${colors.lightblue}
label = 󰘚 %percentage_used%%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%
format-volume-overline = ${colors.purple}

format-muted = 󰝟 <label-muted>
label-muted = %percentage%
format-muted-overline = ${colors.alert}

ramp-volume-0 = 󰕿
ramp-volume-1 = 󰖀
ramp-volume-2 = 󰕾

[module/wireless-network]
type = internal/network
interface = ${env:NETWORK_INTERFACE:wlp1s0}
interval = 2.0

label-connected = %signal%
format-connected-overline = ${colors.yellow}
format-connected = %{A1:networkmanager_dmenu:}<ramp-signal> <label-connected>%{A}

format-disconnected = 󰤮 <label-disconnected>
format-disconnected-overline = ${colors.alert}
label-disconnected = --

ramp-signal-0 = 󰤟
ramp-signal-1 = 󰤢
ramp-signal-2 = 󰤥
ramp-signal-3 = 󰤨

[module/backlight]
type = internal/backlight
card = intel_backlight
format = 󰛨 <label>
format-overline = ${colors.green}
label = %percentage%

[module/battery]
type = custom/script
exec = $DOTFILES/.config/polybar/polybar_display_battery.sh
interval = 3
format-overline = ${colors.red}

[module/exit]
type = custom/text
content = 󰐦
click-left = bspc quit && bspc wm -r
content-padding= 2
